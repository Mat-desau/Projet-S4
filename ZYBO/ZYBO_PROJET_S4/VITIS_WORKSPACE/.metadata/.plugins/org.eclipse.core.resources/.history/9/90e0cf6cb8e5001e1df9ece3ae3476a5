#include "gestionAudio.h"
#include "xparameters.h"
#include "xi2srx.h"
#include "xil_printf.h"






void initAudio(){
	int val = Xil_In32((XPAR_I2S_RECEIVER_0_BASEADDR + 0x08));
	val |= 0x00000001;
	Xil_Out32((XPAR_I2S_RECEIVER_0_BASEADDR + 0x08), val); // Activer le core


	int val = Xil_In32((XPAR_I2S_TRANSMITTER_0_BASEADDR + 0x08));
	val |= 0x00000001;
	Xil_Out32((XPAR_I2S_TRANSMITTER_0_BASEADDR + 0x08), val); // Activer le core
	//Xil_Out32((XPAR_I2S_TRANSMITTER_0_BASEADDR + 0x09), 0x00000001); // Tojours valide


}
