	uartInit();



}



int main(){
	sleep(3);
	init();

	while(1){
		xil_printf("A");
		sleep(1);
		xil_printf("B");
		bytes = XUartLite_Send(&UartLite, buffer_test , 2);
		xil_printf("%d",bytes);






	}


